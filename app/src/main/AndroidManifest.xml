<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.pocketma.motivationclock">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".alarm_change"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".choose_task"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".achievements"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListTasks"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".add_alarm"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".login" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e3c6246a77799d9ed87fe713cded4450ed831fc6" />

        <receiver android:name=".AlarmReceiver" />

        <service android:name=".RingtonePlayingService" />

        <activity android:name=".splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".alarmOne"
            android:label="@string/title_activity_alarm_one"
