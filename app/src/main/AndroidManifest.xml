        <activity
            android:name=".alarmThree"
            android:label="@string/title_activity_alarm_three"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alarmFour"
            android:label="@string/title_activity_alarm_four"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".alarmFive"
            android:label="@string/title_activity_alarm_five"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>